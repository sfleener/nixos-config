// Reference: https://github.com/YaLTeR/niri/wiki/Configuration
input {
    keyboard {
        xkb {
            // NOTE: No need to ctrl:nocaps since I am using home row mods
            layout "us"
        }
    }
    touchpad {
        tap
    }
    mouse {

    }
    trackpoint {

    }
    warp-mouse-to-focus
    focus-follows-mouse max-scroll-amount="0%"
    // workspace-auto-back-and-forth
    mod-key "Super"
}
// tsuki
output "Ancor Communications Inc VC279 G8LMRS004210" {
    mode "1920x1080@60.000"
    scale 1
    transform "90"
    position x=0 y=0
}
output "GIGA-BYTE TECHNOLOGY CO., LTD. G34WQC A 23022B003495" {
    mode "3440x1440@144.000"
    scale 1
    transform "normal"
    position x=1080 y=1440
    focus-at-startup
}
output "GIGA-BYTE TECHNOLOGY CO., LTD. G34WQC A 23022B003487" {
    mode "3440x1440@144.000"
    scale 1
    transform "normal"
    position x=1080 y=0
}
// work laptop
output "InfoVision Optoelectronics (Kunshan) Co.,Ltd China 0x3E94 0x00000004" {
    mode "1920x1080@59.989"
    scale 1
    transform "normal"
    position x=0 y=0
}
output "Dell Inc. DELL P2715Q 0WTY26AL33UL" {
    // mode "3840x2160@59.996"
    mode "2560x1440@59.951"
    scale 1
    transform "normal"
    position x=1920 y=0
    focus-at-startup
}
output "Dell Inc. DELL P2715Q 0WTY26AL35PL" {
    // mode "3840x2160@59.996"
    mode "2560x1440@59.951"
    scale 1
    transform "normal"
    position x=4480 y=0
}
environment {
    ELECTRON_OZONE_PLATFORM_HINT "x11"
    DISPLAY ":0"
}
// Settings that influence how windows are positioned and sized.
layout {
    gaps 5
    center-focused-column "on-overflow"
    preset-column-widths {
        proportion 0.5
        proportion 1.0
    }
    preset-window-heights {
        proportion 0.5
        proportion 1.0
    }
    default-column-width {

    }
    focus-ring {
        off
        width 4
        active-gradient from="#80c8ff" to="#bbddff" angle=45
        inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
    }
    border {
        width 4
        active-gradient from="#cba6f7" to="#89b4fa"
        inactive-gradient from="#585b70" to="#585b70"
    }
    shadow {
        on
        draw-behind-window true
        softness 30
        spread 5
        offset x=0 y=5
        color "#00000070"
    }
    struts {

    }
}
spawn-at-startup "morgen"
spawn-at-startup "bash" "-c" "swww img ~/Pictures/wallpapers/bluewave.png --transition-type center"
spawn-at-startup "wl-paste --watch cliphist store"
spawn-at-startup "wl-clip-persist --clipboard regular"
spawn-at-startup "bash" "-c" "python ~/.config/niri/scripts/blur-wallpaper.py"
spawn-at-startup "bash" "-c" "python ~/.config/niri/scripts/change-wallpaper.py"
spawn-at-startup "wl-clip-persist --clipboard regular"
spawn-at-startup "1password --silent"
prefer-no-csd
screenshot-path "~/Pictures/Screenshots/Screenshot_%Y-%m-%d_%H-%M-%S.png"
// Animation settings.
animations {
    // Slow down all animations by this factor. Values below 1 speed them up instead.
    // slowdown 3.0
    window-open {
        duration-ms 100
        curve "ease-out-expo"
    }
    window-close {
        duration-ms 100
        curve "ease-out-quad"
    }
}
// Work around WezTerm's initial configure bug by setting an empty default-column-width.
window-rule {
    match app-id="^org\\.wezfurlong\\.wezterm$"
    default-column-width {

    }
}
// Side monitor apps
window-rule {
    match app-id="Morgen"
    match app-id="Slack"
    match app-id="Zotero"
    match app-id="spotify"
    open-on-output "Ancor Communications Inc VC279 G8LMRS004210"
}
// floating terminal
window-rule {
    match app-id="scratchpad"
    open-floating true
    default-floating-position x=0 y=50 relative-to="bottom"
    opacity 0.9
    default-column-width {
        proportion 0.7
    }
    default-window-height {
        proportion 0.5
    }
}
// floating
window-rule {
    match app-id="firefox$" title="^Picture-in-Picture$"
    match app-id="org.kde.polkit-kde-authentication-agent-1"
    open-floating true
}
// block screen capture for some apps
window-rule {
    match app-id="^org\\.keepassxc\\.KeePassXC$"
    match app-id="^org\\.gnome\\.World\\.Secrets$"
    match app-id="Proton Pass"
    block-out-from "screen-capture"
}
// Example: enable rounded corners for all windows.
window-rule {
    geometry-corner-radius 12
    clip-to-geometry true
}
// tweak opacity for inactive windows
window-rule {
    match is-active=false
    opacity 0.95
}
binds {
    Mod+Shift+Slash {
        show-hotkey-overlay
    }
    Mod+Return {
        spawn "kitty"
    }
    Mod+Shift+Return {
        spawn "kitty" "--class" "scratchpad"
    }
    Mod+R {
        spawn "~/.config/niri/scripts/walker.sh"
    }
    Mod+D {
        spawn "~/.nix-profile/bin/walker" "--modules" "windows"
    }
    Super+Alt+L {
        spawn "swaylock"
    }
    XF86AudioRaiseVolume allow-when-locked=true {
        spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.1+"
    }
    XF86AudioLowerVolume allow-when-locked=true {
        spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.1-"
    }
    XF86AudioMute allow-when-locked=true {
        spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"
    }
    XF86AudioMicMute allow-when-locked=true {
        spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"
    }
    Mod+Shift+Q {
        close-window
    }
    Mod+Left {
        focus-column-left
    }
    Mod+Down {
        focus-window-down
    }
    Mod+Up {
        focus-window-up
    }
    Mod+Right {
        focus-column-right
    }
    Mod+H {
        focus-column-left
    }
    Mod+L {
        focus-column-right
    }
    Mod+Ctrl+Left {
        move-column-left
    }
    Mod+Ctrl+Down {
        move-window-down
    }
    Mod+Ctrl+Up {
        move-window-up
    }
    Mod+Ctrl+Right {
        move-column-right
    }
    Mod+Ctrl+H {
        move-column-left
    }
    Mod+Ctrl+L {
        move-column-right
    }
    Mod+J {
